<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupo7.brasilflixapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <package android:name="com.google.android.apps.maps" />

        <intent>
            <action android:name="android.intent.action.VIEW" />
        </intent>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />

            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK" />

            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.CHOOSER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/brflixlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrasilFlixapp">

        <activity
            android:name=".activity.ChangeEmail.ChangeEmailActivity"
            android:exported="true">

        </activity>


        <activity
            android:name=".activity.MyPreference.MyPreferenceActivity"
            android:exported="true" />
        <activity
            android:name=".activity.Preferences.PreferencesActivity"
            android:exported="true" />
        <activity
            android:name=".activity.Detail.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.tips.TipsActivity"
            android:exported="true" />
        <activity android:name=".activity.home.HomeActivity" />
        <activity android:name=".activity.splash.SplashActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.main.MainActivity" />
    </application>

</manifest>